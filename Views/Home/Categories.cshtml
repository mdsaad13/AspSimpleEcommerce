@model IEnumerable<OnlineShopping.Models.Categories>
@{
    ViewBag.Title = "Categories";
    ViewBag.Categories_Active = "active";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
    </ol>
</nav>

<div class="row my-4">
    <div class="col-12">
        <div class="row">
            <div class="col-12">
                <h2>@ViewBag.Title</h2>
            </div>
        </div>
    </div>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <a href="@Url.Action("ViewCategory", "Home", new { id = item.ID })">@item.Name</a>
            </li>
        }

    </ul>
</div>

