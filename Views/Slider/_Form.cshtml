@model OnlineShopping.Models.Slider
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <h5 class="card-header">@ViewBag.Title</h5>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)
                    @Html.HiddenFor(model => model.Image)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Title)
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Redirect)
                        @Html.EditorFor(model => model.Redirect, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Redirect, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="ImgFile">Image</label>
                        @if (ViewBag.EditMode == null)
                        {
                            <input type="file" class="form-control-file" id="ImgFile" name="ImgFile" required>
                        }
                        else
                        {
                            <input type="file" class="form-control-file" id="ImgFile" name="ImgFile">
                        }

                        @Html.ValidationMessageFor(model => model.ImgFile, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mt-4 text-center">
                        <input type="submit" value="Submit" class="btn btn-primary w-50" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        @if (ViewBag.EditMode != null)
        {
            <img src="~/Images/Slider/@Model.Image" class="img-fluid" style="max-height:500px;" />
        }
    </div>
</div>

